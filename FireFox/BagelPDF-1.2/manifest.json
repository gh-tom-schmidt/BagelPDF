{
  "manifest_version": 2,
  "name": "BagelPDF",
  "version": "1.2",
  "description": "An easy way to work with PDF's",
  "permissions": [
    "activeTab",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Open PDF in BagelPDF"
  }
}
